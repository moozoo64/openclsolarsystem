  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch OpenclSolarSystem",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/OpenCLSolarSystem/Debug_x64/OpenCLSolarSystem.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/src/OpenCLSolarSystem/Debug_x64",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      //"preLaunchTask": "Make Debug",
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ]
}