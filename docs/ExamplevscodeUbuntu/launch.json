{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch OpenclSolarSystem",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/OpenCLSolarSystem",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/bin",
      // preload libcanberra-gtk3.so.0 because VS Code bug https://github.com/microsoft/vscode/issues/241636
      "environment": [
        {
          "name": "LD_PRELOAD",
          "value": "/usr/lib/x86_64-linux-gnu/libcanberra-gtk3.so.0"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      //"preLaunchTask": "Make Debug",
      //"miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ]
}